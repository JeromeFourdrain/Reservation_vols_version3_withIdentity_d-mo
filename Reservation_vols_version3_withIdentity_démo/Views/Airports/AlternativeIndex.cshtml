@model IEnumerable<Reservation_vols_version2_withEF.Models.Airport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<a asp-action="Index"><i class="bi bi-table" style="font-size: 30px;"></i></a> 

<div class="row">
@foreach (var item in Model) 
{
        <div class="col-xxl-3 col-lg-4 col-md-6 col-sm-12">
            <div class="card" style="width: 18rem;">
          <img src="@Html.Raw(item.Photo)" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="airport-name">@Html.DisplayFor(modelItem => item.Name )</h5>
            <p class="airport-adress">@Html.DisplayFor(modelItem => item.Address)</p>
            <a asp-action="Details" asp-route-id="@item.Airportid" class="btn btn-primary"> Details</a>
          </div>
        </div>
    </div>
}
</div>